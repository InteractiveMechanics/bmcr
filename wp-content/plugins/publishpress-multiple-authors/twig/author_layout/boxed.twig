{% extends 'author_layout/master_layout.twig' %}

{% block title %}
    {% if show_title %}
        <h2 class="widget-title">{{ title }}</h2>
    {% endif %}
{% endblock %}

{% block authors %}
    <ul>
        {% for author in authors %}
            <li class="author_index_{{ loop.index }}">
                {{ get_avatar( author.user_email, 160 )|raw }}
                <a href="{{ author.link }}" class="{{ item_class }}" rel="author">{{ author.display_name }}</a>
                <p class="pp-ma-description">{{ author.description }}</p>

                {% if show_email or show_site %}
                    <p class="pp-ma-links">
                        {% if show_email and author.user_email %}
                            <a href="mailto:{{ author.user_email }}" target="_blank"><span class="dashicons dashicons-email"></span></a>
                        {% endif %}

                        {% if show_site and author.user_url %}
                            <a href="{{ author.user_url }}" target="_blank"><span class="dashicons dashicons-admin-site"></span></a>
                        {% endif %}
                    </p>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
